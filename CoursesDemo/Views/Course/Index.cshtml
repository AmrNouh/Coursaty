@model CourseListViewModel
@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}


<form class="row justify-content-between">
    <div class="input-group input-group-lg col-12 col-md-6 col-lg-7">
        <input type="text" class="form-control form-control-lg shadow" placeholder="Search" aria-label="Search" aria-describedby="basic-addon1">
        <div class="input-group-prepend btn-search px-2 d-flex justify-content-center align-content-center align-items-center rounded-right">
            <img class="img" src="~/images/icon- search.png" alt="search Icon" />
        </div>
    </div>
    <div class="dropdown align-self-center border-0 bg-transparent col-1">
        <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span style="color: #001524; font-size: 18px; ">Sort By</span>
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="#">Category</a>
            <a class="dropdown-item" href="#">Rating</a>
            <a class="dropdown-item" href="#">Duration</a>
        </div>
    </div>
</form>

<div class="mt-3" style="border-top: 1px solid #CACCCE"></div>

<div class="d-flex flex-wrap mt-3 justify-content-center justify-content-lg-between">

    <span class="d-block text-fiter col-12 col-md-1 mb-2 mb-lg-0 ">Filters</span>

    <div class="dropdown bg-white shadow rounded flex-grow-0 mr-3 mb-2 mb-lg-0 fixed-w">
        <button class="btn dropdown-toggle d-flex align-items-center" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="text-drop-label mr-2">Category</span>
            <span class="text-drop-select">All</span>
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            @foreach (var category in Model.Categories)
            {
                <a class="dropdown-item" asp-action="" asp-controller="">@category.Name</a>
            }
        </div>
    </div>

    <div class="dropdown bg-white shadow rounded flex-grow-0 mr-3 mb-2 mb-lg-0 fixed-w">
        <button class="btn dropdown-toggle d-flex align-items-center" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="text-drop-label mr-2">Subject</span>
            <span class="text-drop-select">All</span>
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            @foreach (var subject in Model.Modules)
            {
                <a class="dropdown-item" asp-action="" asp-controller="">@subject.Name</a>
            }
        </div>
    </div>

    <div class="dropdown bg-white shadow rounded flex-grow-0 mr-3 mb-2 mb-lg-0 fixed-w">
        <button class="btn dropdown-toggle d-flex align-items-center" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="text-drop-label mr-2">Level</span>
            <span class="text-drop-select">All</span>
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            @foreach (var level in Model.Levels)
            {
                <a class="dropdown-item" asp-action="" asp-controller="">@level.Name</a>
            }
        </div>
    </div>

    <div class="dropdown bg-white shadow rounded flex-grow-0 mr-3 mb-2 mb-lg-0 fixed-w">
        <button class="btn dropdown-toggle d-flex align-items-center" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="text-drop-label mr-2">Duration</span>
            <span class="text-drop-select">All</span>
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="#">Test 01</a>
            <a class="dropdown-item" href="#">Test 02</a>
            <a class="dropdown-item" href="#">Test 03</a>
        </div>
    </div>

    <div class="dropdown bg-white shadow rounded flex-grow-0 mr-3 mb-2 mb-lg-0 fixed-w">
        <button class="btn dropdown-toggle d-flex align-items-center" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="text-drop-label mr-2">Rating</span>
            <span class="text-drop-select">All</span>
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="#">Test 01</a>
            <a class="dropdown-item" href="#">Test 02</a>
            <a class="dropdown-item" href="#">Test 03</a>
        </div>
    </div>

    <a class="btn btn-new popup text-white" data-url="Course/New" data-toggle="modal" data-target="#modal-create-edit-course" id="CourseModel">
        Add New Course
    </a>
    <partial name="_Model" />
</div>

@*Loop To Load Courses*@
<div class="mt-5">
    @foreach (var course in Model.Courses)
    {
        <div class="d-flex flex-column flex-md-row custom-card pb-3 mt-2">
            <div class="position-relative col-md-3">
                <span class="position-absolute text-white p-1 text-time">@course.Duration</span>
                <img class="course-img card-img img-fluid h-100 w-25 flex-grow-0 flex-shrink-1 w-100" src="~/images/img-placeholder.jpg" alt="Course Image" />
            </div>
            <div class="pt-0 pl-3 flex-fill flex-lg-shrink-1">
                <h5 class="text-course-name mb-1 mt-1">@course.Name</h5>
                <span class="font-weight-bolder d-block text-course-details">@course.Level │ @course.Language language │ Released: @course.RealsedDate</span>
                <span class="d-block text-break text-course-details">@course.Description</span>
                <span class="font-weight-bolder text-price mt-1">@course.Price @course.Currency</span>
            </div>
            <div class="col-12 col-md-2 text-right">
                <a class="text-decoration-none bg-transparent mr-2" asp-action="" asp-controller=""><img src="~/images/icon- edit.svg" alt="Edit" /></a>
                <a class="text-decoration-none bg-transparent" asp-action="" asp-controller=""><img src="~/images/icon-delete.svg" alt="Delete" /></a>
            </div>
        </div>
    }
    <div class="d-flex flex-column flex-md-row custom-card pb-3 mt-2">
        <div class="position-relative col-md-3">
            <span class="position-absolute text-white p-1 text-time">6h 30m</span>
            <img class="course-img card-img img-fluid h-100 w-25 flex-grow-0 flex-shrink-1 w-100" src="~/images/img-placeholder.jpg" alt="Course Image" />
        </div>
        <div class="pt-0 pl-3 flex-fill flex-lg-shrink-1">
            <h5 class="text-course-name mb-1 mt-1">Information Technology Essentials</h5>
            <span class="font-weight-bolder d-block text-course-details">Beginner │ Arabic language │ Released: March 3, 2020</span>
            <span class="d-block text-break text-course-details">Introduction to Information Technology and Information Systems, This course is a survey of the critical topics of Information Systems. The material covers essential areas that drive computing and information technology today, it contains sections that cover a survey of topics of information systems and computer science.</span>
            <span class="font-weight-bolder text-price mt-1">1.500 EGP</span>
        </div>
        <div class="col-12 col-md-2 text-right">
            <a class="text-decoration-none bg-transparent mr-2" href="#"><img src="~/images/icon- edit.svg" alt="Edit" /></a>
            <a class="text-decoration-none bg-transparent" href="#"><img src="~/images/icon-delete.svg" alt="Delete" /></a>
        </div>
    </div>
</div>

@section Css {
    <link rel="stylesheet" href="~/css/Index.cshtml.css" />
}

@section Scripts{
    <script src="~/js/course.js" asp-append-version="true"></script>
} 