@model AddCourseViewModel
@{
    List<SelectListItem> Categories = new List<SelectListItem>();
    foreach (var category in Model.Categories)
    {
        Categories.Add(new SelectListItem() { Text = category.Name, Value = category.Id.ToString(), Selected = category.Id == Model.CategroyId });
    }
    List<SelectListItem> Types = new List<SelectListItem>();
    foreach (var type in Model.Types)
    {
        Types.Add(new SelectListItem() { Text = type.Name, Value = type.Id.ToString(), Selected = type.Id == Model.TypeId });
    }
    List<SelectListItem> Currencies = new List<SelectListItem>();
    foreach (var currency in Model.Currencies)
    {
        Currencies.Add(new SelectListItem() { Text = currency.Name, Value = currency.Id.ToString(), Selected = currency.Id == Model.CurrencyId });
    }
    List<SelectListItem> Languages = new List<SelectListItem>();
    foreach (var language in Model.Languages)
    {
        Languages.Add(new SelectListItem() { Text = language.Name, Value = language.Id.ToString(), Selected = language.Id == Model.Id });
    }
    List<SelectListItem> Statues = new List<SelectListItem>();
    foreach (var status in Model.Statuses)
    {
        Statues.Add(new SelectListItem() { Text = status.Name, Value = status.Id.ToString(), Selected = status.Id == Model.StatusId });
    }
    List<SelectListItem> Levels = new List<SelectListItem>();
    foreach (var level in Model.Levels)
    {
        Levels.Add(new SelectListItem() { Text = level.Name, Value = level.Id.ToString(), Selected = level.Id == Model.LevelId });
    }
    List<SelectListItem> Skills = new List<SelectListItem>();
    foreach (var skill in Model.Skills)
    {
        Skills.Add(new SelectListItem() { Text = skill.Name, Value = skill.Id.ToString() });
    }
    List<SelectListItem> Modules = new List<SelectListItem>();
    foreach (var module in Model.Modules)
    {
        Modules.Add(new SelectListItem() { Text = module.Name, Value = module.Id.ToString() });
    }

}

<div class="modal-content">
    <form asp-action="AddCourse" asp-controller="Course" method="post" enctype="multipart/form-data">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Add Couse/Track</h5>
