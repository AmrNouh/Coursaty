                                    <input asp-for="ReferenceLink" class="form-control form-control-sm" />
                                    <span asp-validation-for="ReferenceLink" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="row">
                            <div class="col-12 d-flex flex-wrap">
