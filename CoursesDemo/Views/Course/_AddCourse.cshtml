                                    <span asp-validation-for="MaxNumberOfStudent" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-6 col-lg-4 form-group">
                                    <label asp-for="CourseFee" class="lable-control"></label>
                                    <input asp-for="CourseFee" class="form-control form-control-sm" />
                                    <span asp-validation-for="CourseFee" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-6 col-lg-4 form-group">
