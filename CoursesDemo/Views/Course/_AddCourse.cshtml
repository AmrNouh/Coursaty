                                        </ul>
                                    </div>

                                </div>
                            </div>
                            <div class="col-12 d-flex">
                                <div class="col-12">
                                    <div class="d-flex flex-nowrap">
                                        <div class="form-group flex-fill">
                                            <label>Skill Required</label>
                                            <div class="d-flex flex-nowrap">
                                                <select id="requirdSkills" class="custom-select flex-fill mr-2" asp-items="Skills">
                                                    <option value="0">[]</option>
                                                </select>
                                                <button id="btnRequirdSkill" type="button" class="btn btn-new text-white">+</button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <ul id="selectedRequirdSkills" class="list-inline list-unstyled">
                                        </ul>
                                    </div>

                                </div>
                            </div>
                            <div class="col-12 d-flex">
                                <div class="col-12">
                                    <div class="d-flex flex-nowrap">
                                        <div class="form-group flex-fill">
                                            <label>Module</label>
                                            <div class="d-flex flex-nowrap">
                                                <select id="courseModules" class="custom-select flex-fill mr-2" asp-items="Modules">
                                                    <option value="0">[]</option>
                                                </select>
                                                <button id="btnModule" type="button" class="btn btn-new text-white">+</button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <ul id="selectedModule" class="list-inline list-unstyled">
