                                    <label asp-for="NumberOfSessions" class="lable-control"></label>
                                    <input asp-for="NumberOfSessions" class="form-control form-control-sm" />
                                    <span asp-validation-for="NumberOfSessions" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-6 col-lg-4 form-group">
                                    <label asp-for="RealsedDate" class="lable-control"></label>
                                    <input asp-for="RealsedDate" class="form-control form-control-sm" />
                                    <span asp-validation-for="RealsedDate" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-6 col-lg-4 form-group">
                                    <label asp-for="MinNumberOfStudent" class="lable-control"></label>
                                    <input asp-for="MinNumberOfStudent" class="form-control form-control-sm" />
                                    <span asp-validation-for="MinNumberOfStudent" class="text-danger"></span>
                                </div>
                                <div class="col-12 col-md-6 col-lg-4 form-group">
