<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/_Menubar.cshtml.css" />
    @RenderSection("Css", required: false)

</head>
<body>
    <header class="shadow flex-grow-0 flex-shrink-1">
        <partial name="_Menubar" />
    </header>

    <div class="container-fluid flex-fill flex-grow-1 flex-shrink-1 pt-4">
        <main role="main" class="col-11 col-lg-9 mx-auto mx-lg-auto">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
